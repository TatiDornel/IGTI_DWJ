<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Ponto Gama</display-name>
  <servlet>
  	<servlet-name>FuncionarioCtrl</servlet-name>
  	<display-name>FuncionarioCtrl</display-name>
  	<description></description>
  	<servlet-class>br.igti.webjava.controller.FuncionarioCtrl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FuncionarioCtrl</servlet-name>
  	<url-pattern>/FuncionarioCtrl</url-pattern>
  </servlet-mapping>

	<servlet>
	  	<servlet-name>PontoCtrl</servlet-name>
	  	<display-name>PontoCtrl</display-name>
	  	<description></description>
	  	<servlet-class>br.igti.webjava.controller.PontoCtrl</servlet-class>
  	</servlet>
	<servlet>
		<servlet-name>LoginCtrl</servlet-name>
		<display-name>LoginCtrl</display-name>
		<description></description>
		<servlet-class>br.igti.webjava.controller.LoginCtrl</servlet-class>
	</servlet>
	
  	<servlet-mapping>
	  	<servlet-name>PontoCtrl</servlet-name>
	  	<url-pattern>/PontoCtrl</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>LoginCtrl</servlet-name>
  		<url-pattern>/LoginCtrl</url-pattern>
  	</servlet-mapping>
  	
